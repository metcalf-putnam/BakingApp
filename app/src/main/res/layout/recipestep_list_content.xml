<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_num_holder"
        android:layout_width="50dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/blue_num_holder"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/preview_step_number"
        app:layout_constraintBottom_toBottomOf="@+id/iv_num_holder"
        app:layout_constraintTop_toTopOf="@+id/iv_num_holder"
        app:layout_constraintLeft_toLeftOf="@+id/iv_num_holder"
        app:layout_constraintRight_toRightOf="@+id/iv_num_holder" />

    <TextView
        android:id="@+id/tv_step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/preview_step_short_description"
        app:layout_constraintLeft_toRightOf="@+id/iv_num_holder"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/iv_num_holder"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_num_holder"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>